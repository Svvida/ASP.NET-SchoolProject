@model List<Employee_App.Models.EmployeeModel>

@{
    ViewData["Title"] = "My Employees";
}

<h2>My Employees</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <!-- Inne kolumny -->
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <!-- Inne dane pracownika -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees to display.</p>
}