@{
}
<h2>Delete Employee</h2>

<p>Are you sure you want to delete this employee?</p>

<div>
    <hr />
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">First Name</th>
                <td>@Html.DisplayFor(model => model.FirstName)</td>
            </tr>
            <tr>
                <th scope="row">Last Name</th>
                <td>@Html.DisplayFor(model => model.LastName)</td>
            </tr>
            <tr>
                <th scope="row">PESEL</th>
                <td>@Html.DisplayFor(model => model.PESEL)</td>
            </tr>
            <tr>
                <th scope="row">Position</th>
                <td>@Html.DisplayFor(model => model.Position)</td>
            </tr>
            <tr>
                <th scope="row">Department</th>
                <td>@Html.DisplayFor(model => model.Department)</td>
            </tr>
            <tr>
                <th scope="row">Hire Date</th>
                <td>@Html.DisplayFor(model => model.HireDate)</td>
            </tr>
            <tr>
                <th scope="row">Termination Date</th>
                <td>@Html.DisplayFor(model => model.TerminationDate)</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>